<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
	$(document).ready(function () {
		// Event handler for adding a supplier
		fetchSuppliers();

        $('#addsupplier').on('click', function (e) {
		    e.preventDefault(); 

			// Collect form data
			let data = {
				supplier_name: $('#suppliername').val(),
				supplier_reference_number: $('#supplierrefnumber').val(),
				supplier_phone: $('#supplierphone').val(),
				supplier_address: $('#supplieraddress').val(),
				supplier_description: $('#supplierdescription').val(),
				supplier_date: $('#supplierdate').val(),
				Balnce: $('#supplierbalance').val()
			};

			// Make the AJAX call
			$.ajax({
				url: '/api/Supplier/Addsupplier',
				type: 'POST',
				contentType: 'application/json',
				data: JSON.stringify(data),
				success: function (response) {
					$('#add_supplier').modal('hide');
					console.log('Supplier added successfully:', response);
					fetchSuppliers(); // Refresh the supplier list
				},
				error: function (xhr) {
				alert('Failed to add supplier: ' + xhr.responseText); 
			}
			});
		});

		// Event handler to open edit modal with current supplier data
		$('.datatable').on('click', '.btn-edit', function () {
			let supplierId = $(this).data('id');
			$.get('/api/Supplier/getSupplier/' + supplierId, function (data) {
				$('#suppliernameUP').val(data.supplier_name);
				$('#supplierrefnumberUP').val(data.supplier_reference_number);
				$('#supplierphoneUP').val(data.supplier_phone);
				$('#supplieraddressUP').val(data.supplier_address);
				$('#supplierdescriptionUP').val(data.supplier_description);
				$('#supplierdateUP').val(data.supplier_date);
				$('#supplierbalanceUP').val(data.balance);
				$('#Edit_supplier').data('id', supplierId).modal('show');
			});
		});

		// Submit updated supplier data
		$('#editsupplier').on('click',  function (e) {
			e.preventDefault();
			let supplierId = $('#Edit_supplier').data('id'); // Get supplier ID from modal data

			if (!supplierId) return; // Exit if no supplier ID (i.e., this is an "Add" operation, not an "Update")

			let updatedData = {
				supplier_id: supplierId,
				supplier_name: $('#suppliernameUP').val(),
				supplier_reference_number: $('#supplierrefnumberUP').val(),
				supplier_phone: $('#supplierphoneUP').val(),
				supplier_address: $('#supplieraddressUP').val(),
				supplier_description: $('#supplierdescriptionUP').val(),
				supplier_date: $('#supplierdateUP').val(),
				Balnce: $('#supplierbalanceUP').val()
			};

			$.ajax({
				url: '/api/Supplier/updateSupplier/' + supplierId,
				type: 'POST',
				contentType: 'application/json',
				data: JSON.stringify(updatedData),
				success: function () {
					alert('Supplier updated successfully!');
					$('#Edit_supplier').modal('hide');
					fetchSuppliers(); // Refresh the supplier list
				},
				error: function () {
					alert('Failed to update supplier');
				}
			});
		});

		// Helper function to fetch and display suppliers in the table
		function fetchSuppliers() {
			$.get('/api/Supplier/getSuppliers', function (data) {
				let tableBody = $('.datatable tbody');
				tableBody.empty();
				console.log(data);
				$.each(data, function (index, supplier) {
					tableBody.append(`
						<tr>
							<td>${index + 1}</td>
							<td><span>${supplier.supplier_name}</span></td>
							<td>${supplier.supplier_reference_number}</td>
							<td>${supplier.supplier_phone}</td>
							<td>${supplier.supplier_address}</td>
							<td>${supplier.supplier_description}</td>
							<td>${supplier.supplier_date}</td>
							<td>${supplier.balance}</td>
							<td class="d-flex align-items-center">
								<a class="btn-action-icon me-2 btn-edit" data-id="${supplier.supplier_id}" href="javascript:void(0);">
									<i class="fe fe-edit"></i>
								</a>
								<a class="btn-action-icon btn-delete" data-id="${supplier}" href="javascript:void(0);">
								<i class="fe fe-trash-2"></i>
								</a>
							</td>
						</tr>
					`);
				});
			});
		}
	});




	 


</script>
